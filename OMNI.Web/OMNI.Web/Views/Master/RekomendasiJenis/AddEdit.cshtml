@model OMNI.Web.Models.Master.RekomendasiJenisModel

<form id="form-akun" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Form Add/Edit Spesifikasi / Jenis" })

    <div class="modal-body">
        @Html.HiddenFor(b => b.Id)

        <div class="form-group">
            <label class="form-label" for="">Select Peralatan</label>
            <select name="PeralatanOSR" asp-for="PeralatanOSR" id="peralatanOSR" class="select2-input"
                    asp-items="@(new SelectList(ViewBag.PeralatanOSRList, "Id","Name"))">
            </select>
            <input type="hidden" name="Port" asp-for="Port"  />
        </div>

        <div class="form-group">
            <label class="form-label" for="">Select Jenis</label>
            <select name="Jenis" asp-for="Jenis" id="jenis" class="select2-input"
                    asp-items="@(new SelectList(ViewBag.JenisList, "Id","Name"))">
            </select>
        </div>

        <div class="form-group">
            <label class="form-label" for="">Select Type</label>
            <select name="RekomendasiType" asp-for="RekomendasiType" id="rekomendasiType" class="select2-input"
                    asp-items="@(new SelectList(ViewBag.RekomendasiTypeList, "Id","Name"))">
            </select>
        </div>

        <div class="form-group">
            <label class="form-label" for="">Rekomendasi Value</label>
            <input class="form-control" type="number" name="Value" asp-for="Value" />
        </div>
    </div>

    @await Html.PartialAsync("_ModalFooter")
</form>

<script src="~/js/jquery-qrcode.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('.select2-input').select2({
            dropdownParent: $('#modal-add-edit')
        });

        $(document).on('submit', '#form-akun', function () {
        var form = $('#form-akun');
        var validation = Array.prototype.filter.call(form, function (form) {
            if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }
            else {
                event.preventDefault();
                var param = new FormParam(
                    form,
                    "Apakah Anda yakin ingin menyimpan akun ini?",
                    '@Url.Action("AddEdit")',
                    null,
                    '#modal-add-edit',
                    '#table1'
                );
                initApp.formSubmit(param);
            }
            form.classList.add('was-validated');
        });
    });
    });

</script>
