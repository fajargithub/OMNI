@{
    ViewData["Title"] = "Rekomendasi Jenis";
    ViewData["PageName"] = "master_rekomendasi_jenis";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-table'></i>  Rekomendasi Jenis";
    ViewData["PageDescription"] = "Halaman pengelolaan data master Rekomendasi Jenis Oil Spill Response";
}

@model OMNI.Web.Models.Master.RekomendasiJenisModel

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="form-label" for="">Lokasi - @ViewBag.RegionTxt</label>
            <select asp-for="Port" id="port" class="select2-input-index"
                    asp-items="@(new SelectList(ViewBag.PortList, "Name","Name"))">
            </select>
        </div> <br />
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label class="form-label" for="">Rekomendasi Type</label>
            <select asp-for="RekomendasiType" id="rekomendasiType" class="select2-input-index"
                    asp-items="@(new SelectList(ViewBag.RekomendasiTypeList, "Id","Name"))">
            </select>
        </div> <br />
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label class="form-label" for="">Year</label>
            <select name="Year" id="year-lokasi" class="select2-input-index"
                    asp-items="@(new SelectList(ViewBag.YearList, "Name","Name"))">
            </select>
        </div> <br />
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <a href="javascript:void(0)" class="btn btn-primary" id="searchLokasi" style="margin-top: 22px;"><i class="fa fa-search"></i> Search</a>
        </div> <br />
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.StatusSurat))
    {
        <div class="col-xl-12" style="padding-bottom: 15px;">
            <i style="color:red;">@ViewBag.StatusSurat, klik <b style="color:dodgerblue;"><a href="/Lampiran">link</a></b> berikut</i>
        </div><br/>
    }

    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Rekomendasi Jenis List
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table1" class="table table-borderless table-hover table-striped w-100">
                        <thead>
                            <tr class="fw-500 text-uppercase">
                                <th style="width:7%;">No</th>
                                <th>Peralatan OSR</th>
                                <th>Jenis</th>
                                <th>Value</th>
                                <th>Satuan</th>
                            </tr>
                            <tr id="table1-filter" style="display:none;">
                                <th></th>
                                <th><input type="text" class="form-control" placeholder="Filter Peralatan OSR" /></th>
                                <th><input type="text" class="form-control" placeholder="Filter Jenis" /></th>
                                <th></th>
                                <th><input type="text" class="form-control" placeholder="Filter Satuan" /></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Modal", new ModalViewModel { ID = "modal-add-edit", Type = ModalType.Right, Size = ModalSize.Medium })
@section ScriptsBlock {
    <script>
        $(document).ready(function () {
            var statusSurat = "@ViewBag.StatusSurat";
            var port = "@ViewBag.SelectedPort.Name";
            if (port !== null && port !== "") {
                $("#port").val(port).change();
            }

            console.log(statusSurat);

            var selectedYear = parseInt("@ViewBag.ThisYear");
            console.log(selectedYear);

            $("#year-lokasi").val(selectedYear).change();

            var typeId = parseInt("@ViewBag.SelectedRekomendasiType.Id");

            if (typeId > 0) {
                $("#rekomendasiType").val(typeId).change();
            }

            $('.select2-input-index').select2();

            $(".select2-placeholder").select2(
                {
                    placeholder: $(this).data("placeholder"),
                    allowClear: true
                });

            $('#table1 thead tr:eq(1) th').each(function (i) {
                $('select', this).on('change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });

                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });
            });

            var table = $('#table1').DataTable(
                {
                    orderCellsTop: true,
                    fixedHeader: true,
                    responsive: true,
                    ordering: false,
                    order: [],
                    columnDefs: [
                        { "orderable": false, "targets": 3 }
                    ],
                    dom:
                        "<'row mb-3'<'col-sm-12 col-md-6 d-flex align-items-center justify-content-start'l><'col-sm-12 col-md-6 d-flex align-items-center justify-content-end'B>>" +
                        "<'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                    buttons: [
                        {
                            text: '<i class="fal fa-filter"></i> Filter',
                            className: 'btn btn-sm btn-outline-primary',
                            action: function (e, dt, node, config) {
                                $('#table1-filter').toggle();
                            }
                        },
                    ],
                    processing: true,
                    "ajax": {
                        "url": base_api + 'RekomendasiJenis/GetAll?port=' + port +"&typeId=" + typeId + "&year=" + selectedYear,
                        "type": 'GET'
                    },
                    "columns": [
                        { "data": null },
                        { "data": "peralatanOSR" },
                        { "data": "jenis" },
                        {
                            "targets": -1,
                            "data": null,
                            "render": function (row, data, iDisplayIndex) {
                                var result = "";

                                if (statusSurat == "") {
                                    if (editable == "True") {
                                        result += "<input class='input-value' type='number' onchange='inputValue(" + iDisplayIndex.id + ")' id='value-" + iDisplayIndex.id + "' data-port='" + port + "' data-typeId='" + typeId + "' data-year='" + selectedYear + "' value='" + iDisplayIndex.value + "' style='width:50px;'>";
                                    } else {
                                        result += "<input class='input-value' type='number' value='" + iDisplayIndex.value + "' style='width:50px;' disabled>";
                                    }
                                } else {
                                    result += "<input class='input-value' type='number' value='" + iDisplayIndex.value + "' style='width:50px;' disabled>";
                                }
                                return result;
                            }
                        },
                        { "data": "satuan" }
                    ],
                    "order": [[1, 'asc']],
                    rowCallback: function (row, data, iDisplayIndex) {
                    },
                    "initComplete": function (settings, json) {
                    },
                    "destroy": true
                }).ajax.reload();

            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $("#port").on('change', function () {
                port = this.value;
                typeId = $("#rekomendasiType").val();

                window.location.href = base_api + 'RekomendasiJenis/Index?port=' + port + "&typeId=" + typeId;
            });

            $("#rekomendasiType").on('change', function () {
                typeId = this.value;
                port = $("#port").val();

                /*window.location.href = base_api + 'RekomendasiJenis/Index?port=' + port + "&typeId=" + typeId + "&year=" + selectedYear;*/
            });

            $("#year-lokasi").on('change', function () {
                selectedYear = this.value;
            });

            $("#port").on('change', function () {
                port = this.value;
            });

            $("#searchLokasi").click(function () {
                window.location.href = base_api + 'RekomendasiJenis/Index?port=' + port + "&typeId=" + typeId + "&year=" + selectedYear;
            })
        });

        function inputValue(id) {
            console.log(id);
            var port = $("#value-" + id).data('port');
            var typeId = $("#value-" + id).data('typeid');
            var year = $("#value-" + id).data('year');
            var value = $("#value-" + id).val();

            console.log(year);

            $.post(base_api + 'RekomendasiJenis/UpdateValue?id=' + id + "&port=" + port + "&typeId=" + typeId + "&value=" + value + "&year=" + year, function (result) {

            });
        }

        function deleteAction(id) {
            Swal.fire({
                title: 'Do you want to delete?',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'Delete',
                denyButtonText: `Cancel`,
            }).then((result) => {
                if (result.value) {
                    $.post(base_api + 'RekomendasiJenis/DeleteRekomendasiJenis?id=' + id, function (result) {
                        Swal.fire('Deleted!', '', 'success');
                        $("#table1").DataTable().ajax.reload(null, false);
                    });
                } else if (result.isDenied) {

                }
            })
        }
    </script>
}
