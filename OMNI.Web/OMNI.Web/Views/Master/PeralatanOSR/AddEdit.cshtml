<form id="form-akun" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Formulir Tambah/Ubah Akun" })

    <div class="modal-body">
        @*<div class="panel-tag">
            Form input data master Peralatan OSR
        </div>*@

        @*@Html.HiddenFor(b => b.ShipId)*@

        <div class="form-group">
            <label class="form-label" for="">Name</label>
            <input class="form-control">
        </div>

        <div class="form-group">
            <label class="form-label" for="">Description</label>
            <textarea class="form-control"></textarea>
        </div>

    </div>

    @await Html.PartialAsync("_ModalFooter")
</form>

<script type="text/javascript">
    $(document).on('submit', '#form-akun', function () {
        var form = $('#form-akun');
        var validation = Array.prototype.filter.call(form, function (form) {
            if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }
            else {
                event.preventDefault();
                var param = new FormParam(
                    form,
                    "Apakah Anda yakin ingin menyimpan akun ini?",
                    '@Url.Action("ManageAccount")',
                    null,
                    '#modal-add-edit',
                    '#table-akun'
                );
                initApp.formSubmit(param);
            }
            form.classList.add('was-validated');
        });
    });

    $(document).ready(function () {
        $(".select2-placeholder").select2(
            {
                placeholder: $(this).data("placeholder"),
                allowClear: true
            });
    });
</script>
