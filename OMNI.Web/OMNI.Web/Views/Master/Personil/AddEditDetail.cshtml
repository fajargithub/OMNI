<form id="form-akun" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Formulir Add/Edit Detail Personil" })

    <div class="modal-body">

        <div class="form-group">
            <label class="form-label" for="">Select Lokasi</label>
            <select class="form-control">
                <option value="value">Balikpapan</option>
                <option value="value">Batam</option>
                <option value="value">Sorong</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label" for="">Rekomendasi Hubla</label>
            <input class="form-control" type="number" name="name" value="" />
        </div>
    </div>

    @await Html.PartialAsync("_ModalFooter")
</form>
<script src="~/js/jquery-qrcode.min.js"></script>
<script type="text/javascript">

    $(document).on('submit', '#form-akun', function () {
        var form = $('#form-akun');
        var validation = Array.prototype.filter.call(form, function (form) {
            if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }
            else {
                event.preventDefault();
                var param = new FormParam(
                    form,
                    "Apakah Anda yakin ingin menyimpan akun ini?",
                    '@Url.Action("ManageAccount")',
                    null,
                    '#modal-add-edit',
                    '#table-akun'
                );
                initApp.formSubmit(param);
            }
            form.classList.add('was-validated');
        });
    });

    $(document).ready(function () {
        $(".select2-placeholder").select2(
            {
                placeholder: $(this).data("placeholder"),
                allowClear: true
            });
    });
</script>
