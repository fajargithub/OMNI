    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Spesifikasi / Jenis List 
                </h2>
                <div class="panel-toolbar">
                    <a asp-action="AddEdit" class="btn btn-primary btn-sm shadow-0" data-toggle="modal" data-target="#modal-add-edit"><i class="fal fa-plus"></i>  Add</a>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table-akun" class="table table-borderless table-hover table-striped w-100">
