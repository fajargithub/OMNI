                                    <a asp-controller="QRCode" asp-action="Index" target=_blank class="btn-edit btn btn-icon btn-sm mr-1 btn-default shadow-0" title="QR Code">
                                        <i class="fal fa-qrcode"></i>
                                    </a>
                                    <a asp-action="AddEdit" class="btn-edit btn btn-icon btn-sm mr-1 btn-default shadow-0" data-toggle="modal" data-target="#modal-add-edit">
                                        <i class="fal fa-pencil"></i>
                                    </a>
                                    <button class="btn-delete btn btn-icon btn-sm btn-danger shadow-0">
                                        <i class="fal fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Oil Boom</td>
                                <td>Infalatable Boom</td>
                                <td>-</td>
                                <td class="text-center">
                                    <a asp-controller="QRCode" asp-action="Index" target=_blank class="btn-edit btn btn-icon btn-sm mr-1 btn-default shadow-0" title="QR Code">
                                        <i class="fal fa-qrcode"></i>
                                    </a>
                                    <a asp-action="AddEdit" class="btn-edit btn btn-icon btn-sm mr-1 btn-default shadow-0" data-toggle="modal" data-target="#modal-add-edit">
                                        <i class="fal fa-pencil"></i>
                                    </a>
                                    <button class="btn-delete btn btn-icon btn-sm btn-danger shadow-0">
                                        <i class="fal fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Oil Boom</td>
                                <td>Shore Sealing Boom</td>
                                <td>-</td>
                                <td class="text-center">
                                    <a asp-controller="QRCode" asp-action="Index" target=_blank class="btn-edit btn btn-icon btn-sm mr-1 btn-default shadow-0" title="QR Code">
                                        <i class="fal fa-qrcode"></i>
                                    </a>
                                    <a asp-action="AddEdit" class="btn-edit btn btn-icon btn-sm mr-1 btn-default shadow-0" data-toggle="modal" data-target="#modal-add-edit">
                                        <i class="fal fa-pencil"></i>
                                    </a>
                                    <button class="btn-delete btn btn-icon btn-sm btn-danger shadow-0">
                                        <i class="fal fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Modal", new ModalViewModel { ID = "modal-add-edit", Type = ModalType.Right, Size = ModalSize.Medium })
