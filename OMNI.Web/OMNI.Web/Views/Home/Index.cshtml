@section ScriptsBlock {
    <script src="~/js/datatable/datatable.js"></script>

    <script>
        var port = "@ViewBag.SelectedPort.Name";

            if (port !== null && port !== "") {
                $("#port").val(port).change();
            }

            $("#port").on('change', function () {
                port = this.value;
                //initTable(portId);

                window.location.href = base_api + 'Home/Index?port=' + port;
            });

            $('.select2-input-index').select2();

            $(".hidden-tr").hide();

            $(".btn-detail").click(function () {
                var id = $(this).attr("id");
                if (!$("#tr-" + id).is(":visible")) {
                    $("#tr-" + id).show();
                } else {
                    $("#tr-" + id).hide();
                }
            });
    </script>

    <script src="~/js/frontend/home.js"></script>
}