@{
    ViewData["Title"] = "Home";
    ViewData["PageName"] = "home";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-book'></i>  Data Lokasi Balikpapan";
    ViewData["PageDescription"] = "Halaman pengelolaan data LLP, Latihan dan Personil Oil Spill Response";
}

@model OMNI.Web.Models.HomeModel
<style>
    .jenis-td {
        background-color: #dcdcdca8;
        font-weight: bold;
    }

    table {
        font-size: 10px;
    }

    td {
        padding: 3px !important;
        vertical-align: middle !important;
    }

    .td-number {
        text-align: center;
        vertical-align: middle;
    }

    .td-edit {
        text-align: center;
    }

    /*  .dt-buttons {
        display: none;
    }*/

    .dataTables_filter{
        margin-top:15px;
    }

    .buttons-excel {
        position: absolute;
        right: 20px;
    }

    .DTFC_LeftBodyWrapper:before, .DTFC_LeftFootWrapper:before, .DTFC_LeftHeadWrapper:before {
        background: none;
    }
</style>
<link href="https://cdn.datatables.net/rowgroup/1.1.2/css/rowGroup.bootstrap.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-xl-12">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label" for="">Select Lokasi</label>
                    <select asp-for="Port" id="port" class="select2-input-index"
                            asp-items="@(new SelectList(ViewBag.PortList, "Name","Name"))">
                    </select>
                </div> <br />
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <br />
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    LLP
                </h2>
                <div class="panel-toolbar">
                    <a asp-action="AddEditLLPTrx" asp-route-port="@ViewBag.SelectedPort.Name" class="btn btn-primary btn-sm shadow-0" data-toggle="modal" data-target="#modal-add-edit"><i class="fal fa-plus"></i>  Add</a>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table_llp_trx" class="table table-striped table-borderless table-hover table-striped w-100">
                        <thead>
                            <tr class="fw-500 text-uppercase" style="text-align:center;">
                                @*<th style="width:10px;"></th>*@
                                @*<th style="width:10px;">No</th>*@
                                <th>Peralatan OSR</th>
                                <th>Jenis / Spesifikasi</th>
                                <th style="width:70px;">Satuan</th>
                                <th style="width:70px;">Detail Existing Lokasi</th>
                                <th style="width:70px;">No Aset</th>
                                <th style="width:80px;">Kondisi</th>
                                <th style="width:80px;">Gambar</th>
                                <th style="width:80px;">Total Existing di Lokasi (Jenis)</th>
                                <th style="width:80px;">Total Exsisting di Lokasi (Keseluruhan)</th>
                                <th style="width:80px;">Rekomendasi Hubla</th>
                                <th style="width:80px;">Total kebutuhan sesuai Hubla</th>
                                <th style="width:80px;">Selisih Hubla</th>
                                <th style="width:80px;">Kesesuaian PM.58 (Terpenuhi/Kurang)</th>
                                <th style="width:80px;">Persentase Hubla</th>
                                <th style="width:80px;">Rekomendasi OSCP</th>
                                <th style="width:80px;">Total Kebutuhan Sesuai OSCP</th>
                                <th style="width:80px;">Selisih OSCP</th>
                                <th style="width:80px;">Kesesuaian OSCP</th>
                                <th style="width:80px;">Persentase OSCP</th>
                                <th style="width:10px;">Action</th>
                            </tr>
                        </thead>
                        <tbody style="text-align:center;">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-12">
        <br />
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    PERSONIL
                </h2>
                <div class="panel-toolbar">
                    <a asp-action="AddEditPersonilTrx" asp-route-port="@ViewBag.SelectedPort.Name" class="btn btn-primary btn-sm shadow-0" data-toggle="modal" data-target="#modal-add-edit"><i class="fal fa-plus"></i>  Add</a>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table_personil_trx" class="table table-borderless table-hover table-striped w-100" style="width:100%;">
                        <thead>
                            <tr class="fw-500 text-uppercase" style="text-align:center;">
                                @*<th style="width:10px;"></th>*@
                                @*<th style="width:10px;">No</th>*@
                                <th>Personil</th>
                                <th>Nama Personil</th>
                                <th style="width:70px;">Satuan</th>
                                <th style="width:70px;">Total Detail Existing</th>
                                <th style="width:70px;">Lampiran Sertifikat</th>
                                <th style="width:70px;">Tanggal Pelatihan</th>
                                <th style="width:70px;">Tanggal Expired</th>
                                <th style="width:70px;">Sisa Masa Berlaku (Hari)</th>
                                <th style="width:70px;">Rekomendasi Hubla</th>
                                <th style="width:70px;">Selisih Hubla</th>
                                <th style="width:70px;">Kesesuaian dengan PM.58</th>
                                <th style="width:70px;">Persentase Personil</th>
                                <th style="width:10px;">Edit</th>
                            </tr>
                        </thead>
                        <tbody style="text-align:center;">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-12">
        <br />
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    LATIHAN
                </h2>
                <div class="panel-toolbar">
                    <a asp-action="AddEditLatihanTrx" asp-route-port="@ViewBag.SelectedPort.Name" class="btn btn-primary btn-sm shadow-0" data-toggle="modal" data-target="#modal-add-edit"><i class="fal fa-plus"></i>  Add</a>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table_latihan_trx" class="table table-borderless table-hover table-striped w-100">
                        <thead>
                            <tr class="fw-500 text-uppercase" style="text-align:center;">
                                @*<th style="width:10px;">No</th>*@
                                <th style="width:70px;">Latihan</th>
                                <th style="width:70px;">Satuan</th>
                                <th style="width:70px;">Tanggal Pelaksanaan</th>
                                <th style="width:70px;">Laporan Kegiatan</th>
                                <th style="width:70px;">Rekomendasi Hubla</th>
                                <th style="width:70px;">Selisih Hubla</th>
                                <th style="width:70px;">Kesesuaian dengan PM.58</th>
                                <th style="width:70px;">Persentase Latihan</th>
                                <th style="width:10px;">Edit</th>
                            </tr>
                        </thead>
                        <tbody style="text-align:center;">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal QRCODE -->
<div id="modal-qrcode" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Solid Flotation Boom</h4>
            </div>
            <div class="modal-body">
                <p style="text-align:center;">
                    <img src="~/img/qrcode.jpg" width="200">
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@await Html.PartialAsync("_Modal", new ModalViewModel { ID = "modal-add-edit", Type = ModalType.Right, Size = ModalSize.Medium })
@await Html.PartialAsync("_Modal", new ModalViewModel { ID = "modal-file", Type = ModalType.Right, Size = ModalSize.Medium })
@await Html.PartialAsync("_Modal", new ModalViewModel { ID = "modal-add-edit-file", Type = ModalType.Right, Size = ModalSize.Medium })

@section ScriptsBlock {
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.3.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.3.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/ashl1/datatables-rowsgroup@fbd569b8768155c7a9a62568e66a64115887d7d0/dataTables.rowsGroup.js"></script>
    <script src="~/js/datatable/datatable.js"></script>

    <script>
        var port = "@ViewBag.SelectedPort.Name";

            if (port !== null && port !== "") {
                $("#port").val(port).change();
            }

            $("#port").on('change', function () {
                port = this.value;
                //initTable(portId);

                window.location.href = base_api + 'Home/Index?port=' + port;
            });

            $('.select2-input-index').select2();

            $(".hidden-tr").hide();

            $(".btn-detail").click(function () {
                var id = $(this).attr("id");
                if (!$("#tr-" + id).is(":visible")) {
                    $("#tr-" + id).show();
                } else {
                    $("#tr-" + id).hide();
                }
            });

        const today = new Date();
        const yyyy = today.getFullYear();
        let mm = today.getMonth() + 1; // Months start at 0!
        let dd = today.getDate();

        if (dd < 10) dd = '0' + dd;
        if (mm < 10) mm = '0' + mm;

        const formattedToday = dd + '/' + mm + '/' + yyyy;
    </script>

    <script src="~/js/frontend/llptrx.js"></script>
    <script src="~/js/frontend/personilTrx.js"></script>
    <script src="~/js/frontend/latihanTrx.js"></script>
}