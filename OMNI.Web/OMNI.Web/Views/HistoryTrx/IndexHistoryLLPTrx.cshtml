@{
    ViewData["Title"] = "History LLP";
    ViewData["PageName"] = "history_llp";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-history'></i>  History LLP";
    ViewData["PageDescription"] = "";
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    History List
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table_history_llptrx" class="table table-striped table-bordered table-hover table-striped w-100">
                        <thead>
                            <tr class="fw-500 text-uppercase">
                                <th style="width:7%;">No</th>
                                <th>Peralatan OSR</th>
                                <th>Jenis / Spesifikasi</th>
                                <th style="width:70px;">Satuan</th>
                                <th style="width:70px;">Detail Existing Lokasi</th>
                                <th style="width:70px;">No Inventory</th>
                                <th style="width:80px;">Kondisi</th>
                                <th style="width:80px;">Brand</th>
                                <th style="width:80px;">Serial Number</th>
                                <th style="width:80px;">No Asset</th>
                                <th style="width:80px;">Status</th>
                                <th style="width:80px;">Created By</th>
                                <th style="width:80px;">Created At</th>
                                <th style="width:80px;">Updated By</th>
                                <th style="width:80px;">Updated At</th>
                                <th style="width:80px;">Status Submit</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@*<script src="~/js/datatable/datatable.js"></script>*@
<script>
        $(document).ready(function () {

            var port = "@ViewBag.Port";
            var selectedYear = parseInt("@ViewBag.Year");
            var trxId = parseInt("@ViewBag.TrxId");

            $('#table_history_llptrx thead tr:eq(1) th').each(function (i) {
                $('select', this).on('change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });

                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });
            });

            var table = $('#table_history_llptrx').DataTable(
                {
                    "ordering": false,
                    "scrollX": true,
                    "scrollY": '400px',
                    "scrollCollapse": true,
                    "paging": false,
                    order: [],
                    columnDefs: [
                        { "orderable": false, "targets": 15 }
                    ],
                    processing: true,
                    "ajax": {
                        "url": base_api + 'HistoryTrx/GetAllHistoryLLPTrx?trxId=' + trxId + '&port=' + port + '&year=' + selectedYear,
                        "type": 'GET'
                    },
                    "columns": [
                        { "data": null },
                        { "data": "peralatanOSR" },
                        { "data": "jenis" },
                        { "data": "satuanJenis" },
                        { "data": "detailExisting" },
                        {
                            "targets": -1,
                            "data": null,
                            "render": function (row, data, iDisplayIndex) {
                                var image = "<a href='javascript:void(0)' onclick='historyQRCodeClick(" + iDisplayIndex.id + ")'><img src='" + iDisplayIndex.qrCode + "' alt='' width='35' id='qrcode-" + iDisplayIndex.id + "'></a>";
                                return image;
                            }
                        },
                        { "data": "kondisi" },
                        { "data": "brand" },
                        { "data": "serialNumber" },
                        { "data": "noAsset" },
                        { "data": "status" },
                        { "data": "createdBy" },
                        { "data": "createDate" },
                        { "data": "updatedBy" },
                        { "data": "updateDate" },
                        { "data": "status" }
                    ],
                    "order": [[1, 'asc']],
                    rowCallback: function (row, data, iDisplayIndex) {
                    },
                    "initComplete": function (settings, json) {
                    },
                    "destroy": true
                }).ajax.reload();

            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });

    function historyQRCodeClick(id) {
        console.log(id);
        $.ajax({
            url: base_api + "HistoryTrx/GetHistoryLLPTrxById?id=" + id,
            method: 'GET',
            success: function (result) {
                console.log(result);
                Swal.fire({
                    imageUrl: result.data.qrCode,
                    imageAlt: 'QR Code',
                    html: 'No Asset: <a href="javascript:void(0)" class="openimage" data-base64="' + result.data.qrCode + '">' + result.data.qrCodeText + '</a> '
                })
            }
        });
    }
</script>