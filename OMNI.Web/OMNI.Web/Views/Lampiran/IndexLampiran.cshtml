@{
    ViewData["Title"] = "Lampiran Surat";
    ViewData["PageName"] = "Lampiran";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-table'></i>  Surat";
    ViewData["PageDescription"] = "Halaman pengelolaan data Lampiran Surat Penilaian, Pengesahan dan Verifikasi Perpanjangan Surat Pengesahan";
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    List Lampiran Surat
                </h2>
                <div class="panel-toolbar">
                    <a asp-action="AddEdit" class="btn btn-primary btn-sm shadow-0" data-toggle="modal" data-target="#modal-add-edit"><i class="fal fa-plus"></i>  Add</a>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="table_lampiran" class="table table-borderless table-hover table-striped w-100">
                        <thead>
                            <tr class="fw-500 text-uppercase">
                                <th style="width:7%;">No</th>
                                <th>Lampiran Type</th>
                                <th>Tanggal Surat Keluar</th>
                                <th>Tanggal Batas Waktu Pemenuhan</th>
                                <th>Remark</th>
                                <th class="text-center" style="width:10%;">Action</th>
                            </tr>
                            <tr id="table_lampiran-filter" style="display:none;">
                                <th></th>
                                <th><input type="text" class="form-control" placeholder="Filter Lampiran Type" /></th>
                                <th><input type="text" class="form-control" placeholder="Filter Surat Keluar" /></th>
                                <th><input type="text" class="form-control" placeholder="Filter Batas Waktu Pemenuhan" /></th>
                                <th><input type="text" class="form-control" placeholder="Filter Remark" /></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

